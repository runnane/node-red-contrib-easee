{
  "name": "@runnane/node-red-contrib-easee",
  "version": "0.7.5",
  "description": "Module for streaming Easee data. Based on node-red-contrib-signalrcore",
  "author": "Jon Tungland",
  "homepage": "https://github.com/runnane/node-red-contrib-easee",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/runnane/node-red-contrib-easee"
  },
  "bugs": {
    "url": "https://github.com/runnane/node-red-contrib-easee/issues"
  },
  "keywords": [
    "easee",
    "charger",
    "ev",
    "signalr",
    "node-red"
  ],
  "dependencies": {
    "@microsoft/signalr": "10.0.0"
  },
  "node-red": {
    "nodes": {
      "easee-configuration": "easee-client/easee-configuration.js",
      "easee-rest-client": "easee-client/easee-rest-client.js",
      "charger-streaming-client": "easee-client/charger-streaming-client.js"
    },
    "version": ">=2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:coverage:html": "jest --coverage && echo 'Coverage report generated in coverage/lcov-report/index.html'",
    "test:coverage:no-threshold": "jest --coverage --passWithNoTests --coverageThreshold='{}'",
    "test:coverage:dev": "jest --coverage --passWithNoTests --coverageThreshold='{}' && echo 'HTML report: coverage/lcov-report/index.html'",
    "test:unit": "jest tests/unit",
    "test:unit:coverage": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration",
    "test:integration:coverage": "jest tests/integration --coverage",
    "test:verbose": "jest --verbose",
    "test:silent": "jest --silent",
    "dep-update": "npx npm-check-updates -u",
    "lint": "eslint easee-client/*.js tests/**/*.js",
    "lint:fix": "eslint easee-client/*.js tests/**/*.js --fix",
    "ci:lint": "npm run lint",
    "release": "npx np"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "node-red": "^4.1.0",
    "node-red-node-test-helper": "^0.3.4"
  }
}
